<Window x:Class="Magazin_de_Electronice.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazin_de_Electronice"
        mc:Ignorable="d"
        Title="Confirm" Height="188" Width="336.8" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="#D64774">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0,15,0,0" Foreground="#FFFFFF">Confirmați cumpărăturile?</Label>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,20,0">
            <Label FontWeight="Bold" FontSize="16" Foreground="#FFFFFF">Suma spre achiare</Label>
            <Label  FontWeight="Bold" FontSize="16" Foreground="#FFFFFF" x:Name="price"/>
            <Label  FontWeight="Bold" FontSize="16" Foreground="#FFFFFF">lei</Label>
        </StackPanel>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Style="{DynamicResource categoriesButtonStyle}" Background="White" Padding="30,10" Click="Button_Click">Da</Button>
    </Grid>
</Window>
